<UserControl x:Class="MaterialChartPlugin.Views.SettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaterialChartPlugin"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      d:DataContext="{d:DesignInstance  local:MaterialChartPlugin}">
    <Grid>
        <StackPanel Margin="12">
            <GroupBox Header="CSV 내보내기 설정">
                <StackPanel Orientation="Vertical" Name="CSVExportSettings">
					<CheckBox IsChecked="{Binding CsvRecordSummary}" Content="집계를 일별로 하기"/>
					<CheckBox IsChecked="{Binding CsvRecordOrder}" Content="날짜 내림차순으로 출력"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>


</UserControl>
