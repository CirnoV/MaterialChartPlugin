<UserControl x:Class="MaterialChartPlugin.Views.SettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaterialChartPlugin"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      d:DataContext="{d:DesignInstance  local:MaterialChartPlugin}">
    <Grid>
        <StackPanel Margin="12">
            <GroupBox Header="CSVエクスポート設定">
                <StackPanel Orientation="Vertical" Name="CSVExportSettings">
                    <CheckBox IsChecked="{Binding CsvRecordSummary}" Content="集計を日別にする"/>
                    <CheckBox IsChecked="{Binding CsvRecordOrder}" Content="日付の降順に出力する"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>


</UserControl>
